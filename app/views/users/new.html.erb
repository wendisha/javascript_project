<% if @error_message %>
<p><%= "#{@error_message}" %></p><br>
<% end %>
<% if @user.errors.full_messages.each do |e| %>
<p><%= e %></p>
<% end %>
<%= form_for(@user) do |f| %>

<%= f.label "Name" %>
<%= f.text_field :name %><br>

<%= f.label "Password" %>
<%= f.text_field :password %><br>

<%= f.submit "Create User" %>
<% end %>
<% end %>